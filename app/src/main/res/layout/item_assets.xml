<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        >

        <ImageView
            android:id="@+id/item_assets_imageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            tools:background="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/item_assets_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Teste nome"
            android:layout_toRightOf="@id/item_assets_imageview"
            android:layout_centerVertical="true"
            />

        <ImageButton
            android:id="@+id/item_assets_download"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:layout_marginLeft="4dp"
            android:src="@android:drawable/stat_sys_download"
            android:layout_toRightOf="@id/item_assets_name"
            android:background="@drawable/round_button"
            android:layout_width="26dp"
            android:layout_height="26dp"/>

        <ImageButton
            android:id="@+id/item_assets_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_media_play"
            android:background="@android:color/white"
            android:text="Ir"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"/>

        />

    </RelativeLayout>
</android.support.v7.widget.CardView>